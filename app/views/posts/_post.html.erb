<div class="col-12 col-md-6 col-lg-4 ">  
  <%= link_to post_path(post.id) do %>
    <div class="card content-card border-dark mb-3 " style="width: 18rem;"  >
        <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
        <div class="card-body text-dark ">

        <% if user_signed_in? %>
          <P id="post-<%= post.id %>">
          <% if post.keeped_by?(current_user) %>
          <%# 「いいね！」済み %>
          <%= render "keep", post: post %>
          <% else %>
          <%# 「いいね」していない %>
          <%= render "diskeep", post: post %>
          <% end %>
          </p>
        <% else %>  
          <%= link_to "新規登録", new_user_registration_path, class:"btn btn-secondary btn-md btn-block" %>
        <% end %>
          <p class="card-text mt-3">
          <%= post.present_name %>
          </p>
          <p>
          <%= post.present_review %>
          </p>
          <p>
          【<%= post.present_score_i18n %>】
          </p>
       </div>
     </div>
    <% end %>
</div> 
      
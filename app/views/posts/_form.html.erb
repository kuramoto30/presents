<%= form_with model: @post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :present_name %>
    <%= f.text_field :present_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :present_score %>
    <%= f.select :present_score, Post.present_scores_i18n.invert, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :present_review %>
    <%= f.text_area :present_review, class: 'form-control'   %>
  </div>
  <div class="form-group">
    <%= f.submit  button_value, class: 'btn btn-primary btn-block' %>
  </div>
  <% end %>